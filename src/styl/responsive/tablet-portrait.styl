@media screen and (min-width: 640px)

  $gutter = 27px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 15px
  $font-size-small = $font-size-basic * .75
  $font-size-mid = $font-size-basic * 1.25
  $font-size-large = $font-size-basic * 1.75

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(96%, $gutter, m)

  font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

  .mobile-only
    display: none !important

  .desktop-only
    display: initial !important

  $header-height = 132px
  $footer-height = 118px

  body
    border-top: 10px solid $color-blue

  #main-content
    min-height: calc('100vh - ' + ($header-height + $footer-height));

  #header
    width: 100%

  #main-nav
    display: block
    height: 100%
    margin-top: 0
    div
      height: 100%
    ul
      width: 100%
      height: 100%
      display: flex
      flex-direction: row
      align-items: center
      justify-content: center
    a
      padding: 0 $margin-tiny

  #logo-holder
    order: 1
  #main-nav
    order: 2
  #header-spacer
    display: initial
    order: 3

  #single-content
    order: 3
  #carousel-container
    order: 2

  .slick-list
    display: block
    position: relative
    margin: 0
    padding: 0

  .slick-track
    position: relative
    top: 0
    left: 0
    display: block
    margin-left: auto
    margin-right: auto

  .slide-content-holder
    margin-bottom: 0 !important
    .grid-column
      width: 100%
      height: 100%
    img
      max-width: 100%
      max-height: 100%
      width: auto
      height: auto

  #slick-carousel
    overflow: hidden

  .slick-arrow
    width: 20px
    height: 20px
    border: 2px solid $color-black
    border-width: 2px 2px 0 0
    background: none
    cursor: pointer
    &:hover
      border-color: $color-blue

  #slick-prev
    transform: rotate(-135deg)

  #slick-next
    transform: rotate(45deg)

  .slick-dots
    li
      display: inline-block
      height: 10px
      width: 10px
      font-size: 0
      appearance: none
      border: 2px solid $color-black
      border-radius: 10px
      margin-right: $margin-tiny
      cursor: pointer
      &:hover:not(.slick-active)
        border-color: $color-blue
      &.slick-active
        background: $color-blue
        border: 2px solid $color-blue
        cursor: default
        pointer-events: none
      button
        appearance: none
        height: 10px
        width: 10px
        border: none
        border-radius: 10px
        background: none
        visibility: hidden

  .text-columns
    section
      -webkit-column-break-inside: avoid
      page-break-inside: avoid
      break-inside: avoid-column

  h1
    font-size: $font-size-large

  h2
    font-size: $font-size-mid

  .wp-caption-text
    font-size: $font-size-small

  #footer-social
    order: 2
    text-align: right

  #footer-mailinglist
    order: 3

  #footer-email
    order: 4

  #footer-address
    order: 5
