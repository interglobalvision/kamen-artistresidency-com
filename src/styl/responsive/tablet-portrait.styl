@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(680px, $gutter, m)

  .mobile-only
    display: none !important

  .menu-toggle
    display: none

  #header
    flex-direction: column
    height: 100vh
    position: fixed

  #logo-holder
    flex-direction: column
    align-items: flex-start
    flex-grow: 0
    padding-top: $margin-small

  #logo-subtitle
    padding-left: 21px

  #menu-holder
    position: relative
    opacity: 1
    pointer-events: auto
    height: auto
    padding-left: 21px
    flex-grow: 1
    display: flex
    flex-direction: column

  #menu-wrapper
    width: 100%
    flex-grow: 1

  #main-nav
    align-items: flex-start
    text-align: left
    justify-content: flex-start
    padding-top: $margin-basic
    li
      margin-top: 0
    a
      padding: 0

  #contact
    text-align: left

  .slick-list
    display: block
    position: relative
    margin: 0
    padding: 0

  .slick-track
    position: relative
    top: 0
    left: 0
    display: block
    margin-left: auto
    margin-right: auto

  .slide-content-holder
    .grid-column
      width: 100%
      height: 100%
    img
      max-width: 100%
      max-height: 100%
      width: auto
      height: auto

  #slick-carousel
    overflow: hidden

  .slick-arrow
    width: 20px
    height: 20px
    border: 2px solid $color-grey-dark
    border-width: 2px 2px 0 0
    background: none
    cursor: pointer
    &:hover
      border-color: $color-green-lite

  #slick-prev
    transform: rotate(-135deg)

  #slick-next
    transform: rotate(45deg)

  .slick-dots
    li
      display: inline-block
      height: 10px
      width: 10px
      font-size: 0
      appearance: none
      border: 2px solid $color-grey-dark
      border-radius: 10px
      margin-right: $margin-tiny
      cursor: pointer
      &:hover:not(.slick-active)
        border-color: $color-green-lite
      &.slick-active
        background: $color-grey-dark
        cursor: default
        pointer-events: none
      button
        appearance: none
        height: 10px
        width: 10px
        border: none
        border-radius: 10px
        background: none
        visibility: hidden

  .text-columns
    section
      -webkit-column-break-inside: avoid
      page-break-inside: avoid
      break-inside: avoid-column
