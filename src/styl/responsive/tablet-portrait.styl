@media screen and (min-width: 640px)

  $gutter = 27px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 15px
  $font-size-small = $font-size-basic * .75
  $font-size-mid = $font-size-basic * 1.25
  $font-size-large = $font-size-basic * 1.75

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(96%, $gutter, m)

  font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

  .mobile-only
    display: none !important

  .desktop-only
    display: initial !important

  $header-height = 132px
  $footer-height = 118px

  #main-content
    min-height: calc('100vh - ' + ($header-height + $footer-height));

  #header
    width: 100%

  #main-nav
    display: block
    height: 100%
    margin-top: 0
    div
      height: 100%
    ul
      width: 100%
      height: 100%
      display: flex
      flex-direction: row
      align-items: center
      justify-content: center
    a
      padding: 0 $margin-tiny

  #home-banner
    height: 60vh

  .swiper-container
    width: calc('100% - ' + $margin-small)
    .swiper-slide
      img
        max-height: 400px
      &:not(:first-child)
        padding-left: $margin-tiny
      &:not(:last-child)
        padding-right: $margin-tiny

  .masonry-item
    width: 50%
    padding-left: $margin-tiny
    padding-right: $margin-tiny

  h1
    font-size: $font-size-large

  h2
    font-size: $font-size-mid

  #post-content
    & > *
      padding-left: $margin-tiny
      padding-right: $margin-tiny
    p
      width: 75%
      max-width: 490px
    .wp-block-image
      max-width: 83.3333333%
      figcaption
        font-size: $font-size-small
        margin-top: $margin-micro
