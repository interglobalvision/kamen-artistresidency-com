@media screen and (min-width: 1024px)

  $gutter = 36px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 16px
  $font-size-small = $font-size-basic * .75
  $font-size-mid = $font-size-basic * 1.25
  $font-size-large = $font-size-basic * 1.75

  grid-maker(96%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

  $header-height = 174px
  $footer-height = 155px

  #main-content
    min-height: calc('100vh - ' + ($header-height + $footer-height));

  #main-nav
    a
      padding: $margin-tiny

  #home-banner
    height: 65vh

  .swiper-container
    width: calc('100% - ' + $margin-small)
    .swiper-slide
      img
        max-height: 470px
      &:not(:first-child)
        padding-left: $margin-tiny
      &:not(:last-child)
        padding-right: $margin-tiny

  .masonry-item
    padding-left: $margin-tiny
    padding-right: $margin-tiny

  h1
    font-size: $font-size-large

  h2
    font-size: $font-size-mid

  #post-content
    & > *
      padding-left: $margin-tiny
      padding-right: $margin-tiny
    p
      width: 50%
      margin-left: 25%
      margin-right: 25%
    .wp-block-image
      max-width: 66.6666666%
      figcaption
        font-size: $font-size-small
        margin-top: $margin-micro

  #footer-social
    order: initial
