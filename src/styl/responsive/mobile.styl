$gutter = 18px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 14px
$font-size-small = $font-size-basic * .75
$font-size-mid = $font-size-basic * 1.25
$font-size-large = $font-size-basic * 1.75

grid-maker(94%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

$header-height = 144px
$footer-height = 253px

#main-content
  min-height: calc('100vh - ' + ($header-height + $footer-height));
  ul
    margin-bottom: 1em
    list-style-type: disc
    li
      margin-bottom: .3em

.container
  max-width: 1600px

#contact
  text-align: center
  padding: $margin-basic 0

#header
  display: flex
  flex-wrap: nowrap

#main-nav
  margin-top: $margin-small
  ul
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-around

input,
button,
[type=submit]
  appearance: none
  font-family: $font-sans

.menu-toggle
  margin: $margin-tiny
  padding: $margin-small
  margin-right: 0
  cursor: pointer
  display: inline-block

#header-logo
  width: 120px

#header-spacer
  display: none

.menu-icon
  width: 20px

.current-menu-item
  color: $color-blue

p
  a:link,
  a:visited,
  a:active
    color: $color-blue

.social-link
  margin-left: .4em
  display: inline-block
  img
    width: 1.2em
  &:first-of-type
    margin-left: 0

#footer
  background-color: $color-blue
  color: $color-white
  p
    margin-bottom: 0

#footer-logo
  width: 90px

#mailchimp-email
  background: transparent
  border: none
  border-bottom: 1px solid $color-white
  color: $color-white
  margin-right: $margin-micro
  &::placeholder
    color: $color-grey-lite
    font-family: $font-sans

#mailchimp-submit
  border: none
  background: transparent
  color: $color-white
  cursor: pointer
  font-weight: normal

#mailchimp-response
  position: absolute

#recent-news-list
  padding-left: 2em
  li
    list-style-type: number

.slide-content-holder:not(:last-of-type)
  margin-bottom: $margin-basic

#single-header
  order: 1

#single-content
  order: 2

#carousel-container
  order: 3

.slick-list
  display: block
  position: relative
  margin: 0
  padding: 0

.slick-track
  position: relative
  top: 0
  left: 0
  display: block
  margin-left: auto
  margin-right: auto

.slide-content-holder
  margin-bottom: 0 !important
  .grid-column
    width: 100%
    height: 100%
  img
    max-width: 100%
    max-height: 100%
    width: auto
    height: auto

#slick-carousel
  overflow: hidden

.slick-arrow
  width: 20px
  height: 20px
  border: 2px solid $color-black
  border-width: 2px 2px 0 0
  background: none
  cursor: pointer
  &:hover
    border-color: $color-blue

#slick-prev
  transform: rotate(-135deg)

#slick-next
  transform: rotate(45deg)

.slick-dots
  li
    display: inline-block
    height: 10px
    width: 10px
    font-size: 0
    appearance: none
    border: 2px solid $color-black
    border-radius: 10px
    margin-right: $margin-tiny
    cursor: pointer
    &:hover:not(.slick-active)
      border-color: $color-blue
    &.slick-active
      background: $color-blue
      border: 2px solid $color-blue
      cursor: default
      pointer-events: none
    button
      appearance: none
      height: 10px
      width: 10px
      border: none
      border-radius: 10px
      background: none
      visibility: hidden

h1
  font-size: $font-size-large

h2
  font-size: $font-size-mid
  margin-bottom: .3em

.content-section:not(:first-of-type)
  margin-top: $margin-small

p img, .wp-caption
  display: block
  margin: 0 auto
  text-align: center

.wp-caption-text
  font-size: $font-size-small

#footer-social
  order: 5
  text-align: left

#footer-logo-holder
  order: 1

#footer-mailinglist
  order: 2

#footer-email
  order: 3

#footer-address
  order: 4
